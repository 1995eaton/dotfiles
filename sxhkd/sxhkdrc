~button1
  bspc pointer -g focus

# alt + shift + {h,j,k,l}
#   bspc window -f {left,down,up,right}
alt + shift + {h,j,k,l}
    bspc node -f {west,south,north,east}

#alt + !button{1-3}
#  bspc pointer -t %i %i
#alt + @button{1-3}
#  bspc pointer -u
alt + button{1-3}
  ; bspc pointer -g {move, resize_side,resize_corner}

# alt bracket{left,right}
#     bspc window -f {prev,next}
alt + bracket{left,right}
    bspc node -f {prev,next}

# alt + {comma,period}
#     bspc desktop -C {backward,forward}
alt + {comma,period}
    bspc node '@/' -C {backward,forward}

# ctrl + shift + h
#   bspc window -e right -20 || bspc window -e left -20
# ctrl + shift + l
#   bspc window -e right +20 || bspc window -e left +20
# ctrl + shift + k
#   bspc window -e up -20 || bspc window -e down -20
# ctrl + shift + j
#   bspc window -e up +20 || bspc window -e down +20

ctrl + shift + h
    bspc node @west -r -10 || bspc node @east -r -10
ctrl + shift + l
    bspc node @west -r +10 || bspc node @east -r +10
ctrl + shift + k
    bspc node @north -r -10 || bspc node @south -r -10
ctrl + shift + j
    bspc node @north -r +10 || bspc node @south -r +10

alt + {_,shift} + s
  {killall -9 conky lemonbar; bspc config -m eDP1 top_padding 0,bspc config top_padding 18; /home/jake/.config/bspwm/panel/init.sh}
alt + {_,shift} + b
  bspc config window_gap {0,15}; bspc monitor -d 0 1 2 3 4 5
alt + button{1-3}
  bspc pointer -g {move,resize_side,resize_corner}
# alt + shift + d
#   bspc window -c
alt + shift + d
  bspc node -c
super + q
  killall conky lemonbar urxvtd; bspc quit

alt + {_,shift + } {o,i}
  bspc node -t {tiled,floating,fullscreen,pseudo_tiled}
# alt + i
#   bspc node -t fullscreen

# alt + {_,shift + }{1-9,0}
#   bspc {desktop -f,window -d} ^{1-9,10}
alt + {_,shift +}{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

alt + p
  dmenu_run -fn 'DejaVu Sans Mono:pixelsize=11' -nb \#1c1c1c -nf \#8f8f8f -sb \#4084D6
alt + shift + x
  rm -r /home/jake/.config/google-chrome-unstable-alt; cp -r /home/jake/.config/google-chrome-unstable-alt.orig /home/jake/.config/google-chrome-unstable-alt && google-chrome-unstable --disable-xss-auditor --user-data-dir=/home/jake/.config/google-chrome-unstable-alt; rm -r /home/jake/.config/google-chrome-unstable-alt; rm -r /home/jake/.cache/google-chrome-unstable-alt
alt + shift + w
  chromium --ignore-gpu-blacklist --enable-javascript-harmony
alt + w
  google-chrome-unstable --test-type --ignore-gpu-blacklist --enable-javascript-harmony
alt + ctrl + w
  primusrun chromium --test-type --harmony_arrow_functions
alt + shift + n
  chromium --test-type --incognito --harmony_arrow_functions
alt + t
  urxvtc -geometry 120x40 -e tmux -2 -q
alt + m
  /home/jake/scripts/hide_cursor/hide.sh
alt + Escape
  pkill -USR1 -x sxhkd
alt + Down
  amixer -c 0 set Master 0+ toggle
ctrl + alt + {j,l,k,h}
  /home/jake/scripts/move.sh {down,right,up,left}
@XF86MonBrightnessUp
   xbacklight -inc 5
@XF86MonBrightnessDown
   xbacklight -dec 5
@XF86AudioMute
  amixer -c 0 set Master 0+ toggle
@XF86AudioLowerVolume
  amixer -c 0 set Master 2-
@XF86AudioRaiseVolume
  amixer -c 0 set Master 2+
