#! /bin/sh

bspc monitor -d 0 1 2 3 4 5

bspc rule -a urxvt floating=on
bspc config -m eDP1 border_width 0
bspc config -m eDP1 window_gap 0
bspc config top_padding 12
bspc config split_ratio 0.52
bspc config borderless_monocle true
bspc config gapless_monocle true

compton &
urxvtd -q &
xsetroot -cursor_name left_ptr &
xrdb ~/.Xresources &
xmodmap /home/jake/.macros &
nitrogen --restore &
xset r rate 300 40 &
xset m 3/2.5 &
python3 ~/source/chromium-vim/cvim_socket.py &
~/.config/bspwm/panel/init.sh &
