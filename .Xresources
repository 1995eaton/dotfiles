! To list available fonts: fc-list / xlsfonts

!*font: xft:Terminus:pixelsize=11:style=Regular
!*boldFont: xft:Terminus:pixelsize=11:style=Regular
*font: xft:Monospace:pixelsize=11:style=Regular
*boldFont: xft:Monospace:pixelsize=11:style=Bold
!*font: xft:Courier New:pixelsize=11:style=Regular
!*boldFont: xft:Courier New:pixelsize=11:style=Bold
!*font: xft:DejaVuSansMono:pixelsize=11:style=Book
!*boldFont: xft:DejaVuSansMono-Bold:pixelsize=11:style=Bold

! XFT CONFIGS

Xft.dpi:	96
Xft.rgba:	rgb
Xft.antialias: 	1
Xft.hinting: 	1
Xft.autohint: 	0
Xft.hintstyle: 	hintslight
Xft.lcdfilter: 	lcddefault

! URXVT CONFIGS

urxvt*internalBorder: 5
urxvt.letterSpace: -1
urxvt.scrollTtyOutput: false
urxvt.scrollTtyKeypress: true
urxvt.scrollBar: false
urxvt.termName: rxvt
urxvt.imLocale: en_US.UTF-8
urxvt.loginShell: true
urxvt.saveLines: 4096
urxvt.boldMode: false
urxvt.inheritPixmap: false
urxvt.jumpScroll: false
urxvt.perl-ext-common: clipboard
urxvt.keysym.M-c: perl:clipboard:copy
urxvt.keysym.M-v: perl:clipboard:paste
urxvt.iso14755:0
urxvt.iso14755_52:0
urxvt.cursorBlink: 1

